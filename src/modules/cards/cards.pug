.cards
    .cards__column_big
        .card-wrap.card-wrap_big
            form(method='post' action='#')
                .form__row
                    h1 Найдём номера под ваши пожелания
                .form__row.form__row_flex
                    +datepicker( {headerTitle: 'прибытие', class: 'arrival', inputPlaceholder: 'ДД.ММ.ГГГГ', inputValue: 'ДД.ММ.ГГГГ', width: 'dropdown-width-small'} )
                    +datepicker( {headerTitle: 'выезд', class: 'exit', inputPlaceholder: 'ДД.ММ.ГГГГ', inputValue: 'ДД.ММ.ГГГГ', width: 'dropdown-width-small'} )
                .form__row
                    +dropdown( { headerTitle: 'гости', headerSetting: '', classDropdown: 'visitors', menuOpen: '', widthSize: 'dropdown-width-large', dataItem: [{optionId: 'adult', defaultcount: '0', mincount: '1', itemText: 'взрослые'}, {optionId: 'minor', defaultcount: '0', mincount: '0', itemText: 'дети'}, {optionId: 'infant', defaultcount: '0', mincount: '0', itemText: 'младенцы'}] } )
                .form__row.form__row_with-button
                    +buttons( {type: 'submit', buttonWidth: 'button_button-big', fill: 'button_fill-100', styleText: 'button_button-text', buttonValue: 'подобрать номер'} )

        .card-wrap.card-wrap_big.cards__card-wrap
            form(method='post' action='#')
                .form__row
                    h1 Регистрация аккаунта
                .form__row
                    .form__item
                        +textField( {inputType: 'text', inputPlaceholder: 'Имя', width: 'dropdown-width-large'} )
                    .form__item
                        +textField( {inputType: 'text', inputPlaceholder: 'Фамилия', width: 'dropdown-width-large'} )
                    .form__item.radio-fields
                        +radioButton( {inputValue: 'male', explanation: 'Мужчина', inputChecked: true} )
                        +radioButton( {inputValue: 'female', explanation: 'Женщина', inputChecked: false} )
                .form__row
                    +textField( {headerTitle: 'дата рождения', inputType: 'text', inputPlaceholder: 'ДД.ММ.ГГГГ', dateMasked: 'date-masked'} )
                .form__row
                    .form__item
                        +textField( {headerTitle: 'данные для входа в сервис', inputType: 'email', inputPlaceholder: 'Email', pattern: '([A-z0-9_.-]{1,})@([A-z0-9_.-]{1,})\.([A-z]{2,8})'} )
                    .form__item
                        +textField( {inputType: 'password', inputPlaceholder: 'Пароль', width: 'dropdown-width-large'} )
                    .form__item.toggle-fields
                        +toggle( {inputValue: 'no-receive', explanation: 'Получать спецпредложения', inputChecked: false} )
                    .form__row.form__row_with-button
                        +buttons( {type: 'submit', buttonWidth: 'button_button-big', fill: 'button_fill-100', styleText: 'button_button-text', buttonValue: 'перейти к оплате'} )
                    .form__row.form__row_with-button.form__row_flex
                        p Уже есть аккаунт на Toxin
                        +buttons( {styleText: 'button_button-text', buttonWidth: 'button_button-small', borderStyle: 'button_border-fill-100', buttonValue: 'войти'} )

