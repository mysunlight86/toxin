              span ДД.ММ.ГГГГ
              span.material-icon <i class="material-icons md-dark-50">expand_more</i>
          label
            .field-label
              ._label-text._label-text_bold._label-text_uppercase date Dropdown
            .text-field-input-enter.input-dropdown-half
              span 19.08.2019
              span.material-icon <i class="material-icons md-dark-50">expand_more</i>
