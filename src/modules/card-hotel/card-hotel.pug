mixin cardHotel(options)
    .card-wrap.card-wrap__hotel
        if options.isArrow
            .single-item
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n888
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n840
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n888
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n840
        else
            .single-item(data-slick='{"arrows": false}')
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n840.single-item_no-arrows
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n888.single-item_no-arrows
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n840.single-item_no-arrows
                .card-wrap__hotel_slide-arrow.card-wrap__hotel_n888.single-item_no-arrows
        .card-wrap__block
            .card-wrap__row.form__row_flex
                .form__header_left
                    span.room-number №
                    =' '
                    h2.room-number #{options.roomNumber}
                    =' '
                    h3.room-class люкс
                .form__header_right
                    span.price #{options.price}
                    =' '
                    span.price-period в сутки
            .card-wrap__row.form__row_flex
                .form__header_left
                    +rateButton( {starNumber: options.starNumber, checkedNumber: options.checkedNumber, ratingNumber: options.ratingNumber} )
                .form__header_right
                    span.quantity #{options.quantity}
                    =' '
                    span.quantity-text #{options.quantityText}
